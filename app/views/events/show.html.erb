    {
      "lat": "<%= @event.latitude %>",
      "lng": "<%= @event.longitude %>",
      "picture": {
        "url": "<%= image_path("#{@event.category}.png") %>",
        "width":  32,
        "height": 37
      },
      "infowindow": "<%= @event.title %>"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  google.maps.event.trigger(markers[0].getServiceObject(), 'click');
  });
</script>
