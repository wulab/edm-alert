<% provide :title, "สมัคร" %>
<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
    <div class="card registration">
      <div class="card-block">
        <h2 class="card-title">สมัคร</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :full_name, required: true, label: 'ชื่อ-นามสกุล', autofocus: true %>
            <%= f.input :email, required: true, label: 'อีเมล์' %>
            <%= f.input :password, required: true, label: 'พาสเวิร์ด', hint: ("ไม่ต่ำกว่า #{@minimum_password_length} ตัวอักษร" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true, label: 'ยืนยันพาสเวิร์ด' %>
            <%= f.input :postal_code, required: true, label: 'รหัสไปรษณีย์' %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "สมัคร" %>
          </div>
        <% end %>
        <div class="links">
          <%= link_to "เข้าสู่ระบบ", new_session_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>
